<section id="content-details" class="row clearfix">
    <article id="details-article" class="col-sm-8">
        <h1 id="article-title"><%= @product.title %><br> <span class="font-weight-light"><%= @product.subtitle %></span></h1>

        <%= raw @product.description %>
    </article>
    <aside id="details-aside" class="col-sm-4">

      <%= form_tag charges_path do %>
        <article>
          <% if flash[:error].present? %>
            <div id="error_explanation">
              <p><%= flash[:error] %></p>
            </div>
          <% end %>
          <label class="amount">
            <span>$<%= @product.price %></span>
          </label>
        </article>

        <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
                data-description="A month's subscription"
                data-amount= <%= @product.price_in_cents %>
                data-locale="auto"></script>
        <% end %>

                <ul id="details-infobox" class="list-group">
                  <li class="list-group-item active clearfix">Info</li>
                  <li class="list-group-item"><%= @product.info %></li>
                </ul>
    </aside>
</section>

<footer id="site-footer">
Made by <a href="#" target="_blank"><p>Learn Rails</p></a>
</footer>
